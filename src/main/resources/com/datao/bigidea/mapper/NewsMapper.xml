<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.datao.bigidea.mapper.NewsMapper">

    <!--插入新的信息-->
    <insert id="insert" parameterType="com.datao.bigidea.entity.News">
        INSERT INTO test_blog
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="url != null and url != ''">url ,</if>
            <if test="url != null and url != ''">title,</if>
            <if test="url != null and url != ''">content,</if>
            <if test="url != null and url != ''">`time`,</if>
            <if test="url != null and url != ''">contentEle,</if>
            <if test="url != null and url != ''">createTime,</if>
            <if test="url != null and url != ''">`type`,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="url != null and url != ''">#{url},</if>
            <if test="url != null and url != ''">#{title},</if>
            <if test="url != null and url != ''">#{content},</if>
            <if test="url != null and url != ''">#{time},</if>
            <if test="url != null and url != ''">#{contentEle},</if>
            <if test="url != null and url != ''">#{createTime},</if>
            <if test="url != null and url != ''">#{type}</if>
        </trim>
    </insert>

    <!--查询所有的News-->
    <select id="queryAllNews" resultType="com.datao.bigidea.entity.News">
        SELECT * FROM test_blog WHERE `time` IS NULL
    </select>

    <!--更新News-->
    <update id="update" parameterType="com.datao.bigidea.entity.News">
        UPDATE test_blog
        <set>
            <if test="url != null and url != ''">url = #{url} ,</if>
            <if test="url != null and url != ''">title = #{title},</if>
            <if test="url != null and url != ''">content = #{content},</if>
            <if test="url != null and url != ''">`time` = #{time},</if>
            <if test="url != null and url != ''">contentEle = #{contentEle},</if>
            <if test="url != null and url != ''">createTime = #{createTime},</if>
            <if test="url != null and url != ''">`type` = #{type},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>